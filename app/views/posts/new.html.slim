- if @post.errors.any?
  - @post.errors.full_messages.each do |message| 
    .errors
      = message
.make-center-column
  = form_with model: @post  do |form|
    = form.hidden_field :user_id, value: current_user.id
    .post-input-shell
      = form.text_area :text, class: 'post-input-form', maxlength: "140", required: true
      = form.submit '投稿', class: 'post-submit'
      = link_to '戻る', posts_path, class: 'post-submit'
scss:
  .post-input-shell{
    width: 500px;
    height: 300px;
    position: absolute;
    top: 150px;
    left: 50%;
    margin-left: -250px ;    
    background-color: white;
    border-radius: 20px;
    display: flex;
    flex-direction: column; 
    align-items: center;
    justify-content: center; 
  }
  .post-input-form{
    width: 400px;
    height: 200px;
    border: none;
    resize: none;
    outline: none;
  } 
  .post-submit{
    position: relative;
    top: 100px;
    font-weight: 600;
    background-color:white;
    width: 150px;
    border-radius: 25px;
    border: none;
    font-size: 20px;
    font-family: Arial, Helvetica, sans-serif;
    margin-top: 5px;
  }

