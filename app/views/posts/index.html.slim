    position: absolute;
    top: 45px;
    left: 50%;
    margin-left: -150px ;
  }

  .like-button{
    color: red;
    font-size: 25px;
    background-color: wheat;
    width: 20px;
    border: none;
    text-align: center;
  }
  .no-button{
    position: relative;
    top: 120px;
    border: none;
    background-color:wheat;
  }
