.title 
  .make-center-column Gassiper
.title2  
  .make-center-column Profile
p.top-page = link_to 'TOPページ', posts_path
.flash
  .notice
    = notice
  .alert
    = alert 
.deactivate-button
  = link_to '退会', user_registration_path, method: :delete

- if @user.profile_picture.attached?
  .make-center-column
    = image_tag @user.profile_picture.variant(gravity: :center, resize: "100x100^", crop: "90x90+0+0").processed, class: "image"  
- else
  .make-center-column
    .empty-pic.image 
      div no picture
.make-center-column
  .show-form.make-center-column
    .show-form-control
      .show-label お名前
      .show-name
        = @user.name
    .show-form-control
      .show-label 自己紹介
      .show-introduce 
        = @user.introduce
  - if current_user.id == @user.id
    .show-button
        .form-button  
          = link_to '編集', edit_user_registration_path, class: 'form-button'

scss: 
  .deactivate-button{
    position: fixed;
    top: 120px;
    left: 90%;
    background-color: salmon;
    text-align: center;
    width: 70px;
    border-radius: 10px;
  }
  .show-form{
    height: 400px;
    width: 300px;
    background-color:white;
    border-radius: 25px;
    position: fixed;
    top: 200px;
  }
  .show-form-control{
    height: 100px;
    width: 280px;
    background-color:white;
    border-radius: 5px;
    margin: 20px 0px;
    position: relative;
    top: 15px;
  
    word-break:break-all;

  }
  .show-label{
    position: relative;
    font-weight: bold; 
    top: -30px;
  }
  .show-name{
    margin: 10px 0 ;
    font-size: 20px;   
  }
  .show-button{
    position: fixed;
    top: 600px;
  }
  .show-introduce{
    font-size: 15px;
  } 
  .image{
    position: relative;
    top: 5px;
    border-radius: 50px;
    width:100px;
    height: 100px;
    z-index: 1;
  }
  .empty-pic{
    background-color: salmon;
    display: flex;
    align-items: center;
