
.profile-box-under-small
  h2 いいねした投稿一覧
  - if @searched_posts
    h3 Gassips !
    - @searched_posts.each do |post|
      - user = post.user
      .post
        .user-info
          - if  user.profile_picture.attached?
            = image_tag user.profile_picture, class: "image"
          - else
            .empty-pic no picture
          .user-info-name
            = link_to user.name, user_path(user.id)
        .post-shell.text-align-initial
          = link_to simple_format(post.text), post_path(post.id)

        - if current_user.liked(post)
          = button_to likes_path, method: 'delete', params: {likable_type: "Post", likable_id: post.id, from_user_show: true}, class: "no-button", id: 'unlike'
            i class="fa fa-heart like-button"

  - if @searched_comments
    h3 Comments !
    - @searched_comments.each do |comment|
      - post = comment.post
      .comments
        .post
          .user-info
            - if  post.user.profile_picture.attached?
              = image_tag post.user.profile_picture, class: "image"
            - else
              .empty-pic no picture
            .user-info-name
              = link_to post.user.name, user_path(post.user.id)
          .post-shell.text-align-initial
            = link_to simple_format(post.text), post_path(post.id)
        .comment-shell.text-align-initial
          = simple_format(comment.text)
        .user-name-comment
          = comment.user.name
        - if current_user.liked(comment)
          = button_to likes_path, method: 'delete', params: {likable_type: "Comment", likable_id: comment.id}, class: "comment-no-button", id: "unlike-comment"
            i class="fa fa-heart comment-like-button"

